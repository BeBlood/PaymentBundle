<form action="{{ initializationData.url }}" method="POST">
    <input type="hidden" name="amount" value="{{ initializationData.transaction.amount }}">
    <input type="hidden" name="currencyCode" value="{{ initializationData.transaction.currencyCode }}">
    <input type="hidden" name="transactionId" value="{{ initializationData.transaction.id }}">
    <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="{{ initializationData.publicKey }}"
        data-amount="{{ initializationData.transaction.amount }}"
        data-name="Stripe.com"
        data-description="{% if initializationData.transaction.description is not null %}{{ initializationData.transaction.description }}{% else %}Example charge{% endif %}"
        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
        data-locale="auto"
        data-zip-code="true"
        data-currency="{{ initializationData.transaction.currencyCode }}">
    </script>
</form>
