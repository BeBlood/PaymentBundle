<form action="" method="post" id="payplug" novalidate>
    <p>
        <button type="submit" class="btn btn-default">Buy now</button>
    </p>
</form>

<script type="text/javascript" src="https://api.payplug.com/js/1.0/form.js"></script>
<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function() {
    [].forEach.call(document.querySelectorAll("#payplug"), function(el) {
      el.addEventListener('submit', function(event) {
        var payplug_url = '{{ initializationData.payment.hosted_payment.payment_url }}';
        Payplug.showPayment(payplug_url);
        event.preventDefault();
      })
    })
  })
</script>
